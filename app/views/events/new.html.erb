<div class="cat-home text-center">
  <%= render 'welcome/navbar2' %>
  <div class="welcome-image-sign-up">
    <%= image_tag("house-of-bastet-n.png", class: "house-of-bastet-a") %>
  </div>
  <div class="form-user-form">
    <div class="help">
      <%= form_for :event, url: events_path do |f| %>
        <% if @user %>
          <p>
            User to take care of the Cat: <%= @user.email %>
            <%= f.hidden_field :care_user_id, value: @user.email %>
          </p>
        <% else %>
          <p> 
            User to take care of the Cat: <%= f.select :care_user_id, catcareuser %>    
          </p>
        <% end %>
        <p> 
          Cat: <%= f.select :cat_id, cats %>    
        </p> 
        <p>
          <%= f.label :start %>
          <%= f.date_field :start %>
        </p>
        <p>
          <%= f.label :end %>
          <%= f.date_field :end %>
        </p>
        <p>
          <%= f.submit "Create Event" %>
        </p>
      <% end %>
    </div>
    <div>
      <button><%= link_to("Back", events_path) %></button>
    </div>
  </div>
