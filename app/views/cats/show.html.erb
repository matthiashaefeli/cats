	<div class="form-user-form">
		<% if @cat.avatar_url %>
			<p><%= image_tag @cat.avatar_url, class: "avatar-cat" %></p>
		<% end %>
		<h1><%= @cat.name %> </h1>
		<p>Breed: <%= @cat.breed %></p>
		<!-- <p>Age: <%= @cat.age %></p> -->
		<p><%= @cat.comment %></p>	
	</div>
	<div>
		<button><%= link_to("edit cat", edit_cat_path(@cat.id)) %></button> 
		<button><%= link_to("delete cat", cat_path(@cat.id), method: "delete") %></button>
	</div>
